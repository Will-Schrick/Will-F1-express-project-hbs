generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TEAMUSER
  ADMIN
}

//anyone on teams: mechanic, manager, pilot, etc
model User {
  id        String   @id @unique
  email     String   @unique
  password  String
  name      String
  dob       DateTime
  teamid    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(TEAMUSER) //user or admins  //  only teammanagers are admins, rest are users
  Team      Team     @relation("TeamToUsers",fields: [teamid], references: [teamid])
  TeamRole  String // mechanic, driver, teammanager etc
}

//don't touch
model Session {
  sid    String   @id @db.VarChar(255) // Session ID
  sess   Json // Session data stored as JSON
  expire DateTime // Expiration date of the session
}

model Team {
  teamid          Int      @id @default(autoincrement()) //1,2.3
  name            String // (redbull, Ferrari , etc)
  location        String //country
  companowner     String //name
  yearestablished DateTime //mo/year
  crewmembers     User[]    @relation("TeamToUsers")// links to all users who below to this team
}

